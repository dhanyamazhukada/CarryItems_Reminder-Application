<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="destinationViewModel"
            type="com.example.carryitemsreminder.destination.DestinationViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="@string/Where_are_you_heading"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/btnShopping"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="@string/Shopping"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading"
        android:onClick="@{() -> destinationViewModel.onShoppingSelected()}"/>

    <Button
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/btnGym"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/button_text_size"
        android:text="@string/Gym"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShopping"
        android:onClick="@{() -> destinationViewModel.onGymSelected()}" />

    <Button
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/btnOffice"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:textSize="@dimen/button_text_size"
        android:layout_marginTop="10dp"
        android:text="@string/Office"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGym"
        android:onClick="@{() -> destinationViewModel.onOfficeSelected()}"/>

    <Button
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/btnOuting"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text="@string/Outing"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOffice"
        android:onClick="@{() -> destinationViewModel.onOutingSelected()}"/>

    <Button
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/btnSports"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="@string/Sports"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOuting"
        android:onClick="@{() -> destinationViewModel.onSportsSelected()}"/>

    <Button
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/btnSwimming"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="@string/Swimming"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSports"
        android:onClick="@{() -> destinationViewModel.onSwimmingSelected()}"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>